@model lab10.Models.Order

@{
    ViewData["Title"] = "Order placed";
}

@section Scripts {
    <script type="text/javascript" src="~/js/site.js"></script>
    <script>
        clearCart();
    </script>
}

<div>
    <h4>Order placed</h4>
    <hr />
    <dl class="row">
        <h4 class = "col-sm-12">Person</h4>
        <dl class="col-sm-12 row container">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Person.FirstName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Person.FirstName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Person.LastName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Person.LastName)
            </dd>
        </dl>
        <h4 class = "col-sm-12">Payment</h4>
        <dl class="col-sm-12 row">    
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </dt>
            <dd class = "col-sm-10">
                @if(Model.PaymentMethod == 0){
                    <span>Bank transfer</span>
                } else {
                    <span>Cash on delivery</span>
                }
            </dd>
        </dl>
    </dl>
</div>
<div>
    <a asp-controller="Shop" asp-action="Index">Back to List</a>
</div>
